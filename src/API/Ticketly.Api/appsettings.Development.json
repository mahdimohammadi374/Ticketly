{
  "ConnectionStrings": {
    "Database": "Host=ticketly.database;port=5432;Database=ticketly;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "ticketly.redis:6379"
  },
  "Serilog": {
    "Usign": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://ticketly.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Ticketly.Api"
    }
  }
}
